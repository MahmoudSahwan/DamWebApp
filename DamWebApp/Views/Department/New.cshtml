@model Department
@{
    ViewData["Title"] = "New";
}

<h1>New</h1>
<!--/Department/SaveNew?Name=val&ManagerName=value-->
<form action="/Department/SaveNew" method="post">

    <div>
        <label>Name</label>
        <input class="form form-control" name="Name" type="text" 
               id="Name" value="@Model?.Name"/>
    </div>
    <div>
        <label>Manager Name</label>
        <input class="form form-control" name="ManagerName" type="text" 
               id="ManagerName" value="@Model?.ManagerName"/>
    </div>
    <input type="submit" value="Create" class="btn btn-success"/> 
</form>
<a href="/Department/Index">Back To List</a>